{
  "name": "juleena-api",
  "version": "0.0.1",
  "repository": "https://github.com/cpe-coder/juleena-api",
  "bugs": {
    "url": "https://github.com/cpe-coder/juleena-api/issues"
  },
  "contributors": [
    {
      "name": "Grian Gajila",
      "url": "https://github.com/cpe-coder"
    }
  ],
  "description": "Juleena API Server",
  "author": "Grian Gajila <griangajila2@gmail.com>",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "dev": "nodemon --watch ./src/ -e ts --exec  \"tsx ./src/app.ts\"",
    "clean": "rm -rf ./dist",
    "build": "tsup",
    "start": "node ./dist/server.js",
    "db:start": "docker compose -f ./docker-compose-db.yaml up -d",
    "db:stop": "docker compose -f ./docker-compose-db.yaml down",
    "db:dev": "tsx ./cli/db-migrate.ts",
    "db:migrate": "tsx ./cli/db-migrate.ts",
    "db:create": "prisma migrate dev --create-only",
    "db:generate": "prisma generate",
    "db:deploy": "prisma migrate deploy",
    "db:status": "prisma migrate status",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "pnpm lint --fix",
    "format": "prettier --write '**/*.ts{,x}'",
    "check:types": "tsc --noEmit",
    "check:spell": "git diff --name-only | cspell --no-summary --no-progress --no-must-find-files --file-list stdin",
    "check:all": "concurrently \"pnpm lint\" \"pnpm check:types\" \"pnpm check:spell\"",
    "pre-commit": "concurrently \"lint-staged --allow-empty\" \"pnpm check:types\" \"pnpm check:spell\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/swagger-ui": "^0.5.2",
    "@hono/zod-openapi": "^1.1.4",
    "@prisma/client": "^6.19.0",
    "@scalar/hono-api-reference": "^0.9.25",
    "@vitest/coverage-v8": "^4.0.10",
    "chalk": "^5.6.2",
    "dayjs": "^1.11.19",
    "dotenv": "^16.4.5",
    "hono": "^4.10.6",
    "http-status-codes": "^2.3.0",
    "kysely": "^0.28.8",
    "pg": "^8.16.3",
    "prisma": "^6.19.0",
    "prisma-kysely": "^2.2.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.39.1",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.15.6",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "concurrently": "^9.2.1",
    "cspell": "^9.3.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "swagger-jsdoc": "^6.2.8",
    "tsup": "^8.5.1",
    "tsx": "^4.7.1",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.10"
  }
}
